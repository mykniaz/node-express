<div class="row">
	<div class="col s12">
		<h1>Course: {{course.title}}</h1>
	</div>
</div>
<div class="row">
	<div class="col s12 m8 offset-s0 offset-m2">
		<div class="card">
			<div class="card-image">
				<img src="{{course.img}}" alt="{{course.title}}">
			</div>
			<div class="card-content">
				<big class="j-price">{{course.price}}</big>
			</div>
			<div class="card-action actions">
				<a href="/courses/{{course.id}}/edit?allow=true">Edit course</a>
				<form method="post" action="/cart/add">
					<input type="hidden" name="id" value="{{course.id}}"/>
					<button class="btn btn-primary"
									type="submit">
						Add to cart
					</button>
				</form>
			</div>
		</div>
	</div>
</div>
